<div id="top">
  <% if @current_user.student?  %>
    <h2><%= t("views.interview.my_index") %></h2>
  <% else %>
    <h2><%= @user.name %>さんの面談日一覧</h2>
<% end %>

  <% if @interviews.any? %>
    <table class="table mt-3">
      <thead>
      <tr>
        <%= render "header"%>
      </tr>
      </thead>
      <tbody>
      <%= render "body"%>
      </tbody>
    </table>
    <div class="py-3"><%= paginate @interviews %></div>
  <% else %>
    <p class="mt-3">面談日はまだ作成されていません。</p>
  <% end %>

  <p><a href="#top">このページの先頭へ戻る</a></p>
</div>
