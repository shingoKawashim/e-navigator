<%= form_tag(user_mailto_path, method: "POST", class: 'form-inline') do %>
  <%= label_tag :mentor_id, t("views.user.mentor"), class: 'mr-sm-2' %>
  <%= collection_select :mentor_user, :id, User.use_mentors, :id, :name, {}, class: 'custom-select mb-2 mr-sm-2 mb-sm-0' %>

  <%= submit_tag t("views.default.request"), data: { confirm: t("messages.mail_send_confirm") }, class: 'btn btn-large btn-success' %>
<% end %>
